generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model TriggerConditional {
  id  Int @id @default(autoincrement())
  description String
  source String
  parameter String

  @@map("tbl_trigger_cond")
}

model TriggerType {
  id Int @id @default(autoincrement())
  description String
  status Boolean
  unit_of_measurement String
  is_accumulated Boolean

  @@map("tbl_trigger_type")
  Trigger Trigger[]
}

model Trigger {
  id Int @id @default(autoincrement())
  description String
  id_trigger_type Int
  value Float
  status Boolean
  group String?
  machine String?
  id_user Int
  created_at DateTime @default(now())

  @@map("tbl_trigger")
  type TriggerType @relation(fields: [id_trigger_type], references: [id])
  TriggerTask TriggerTask[]
  TriggerCondOption TriggerCondOption[]
}

model TriggerTask {
  id Int @id @default(autoincrement())
  id_trigger Int
  description String
  id_user Int
  closed Boolean
  created_at DateTime @default(now())

  trigger Trigger @relation(fields: [id_trigger], references: [id])
  @@map("tbl_trigger_task")
}

model TriggerCondOption {
  id Int @id @default(autoincrement())
  id_trigger Int
  value Float

  trigger Trigger @relation(fields: [id_trigger], references: [id])
  @@map("tbl_trigger_cond_option")
}