{
  "compilerOptions": {
    "module": "commonjs",
    "preserveConstEnums": true,
    "target": "es2017",                                  
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node"]
  },

  "include": [
    "src/**/*.ts"
  ]
}
